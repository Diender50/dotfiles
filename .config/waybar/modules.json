{
 "mpris": {
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} <i>{dynamic}</i>",
    "player-icons": {
      "default": "▶",
      "mpv": "▶"
    },
    "status-icons": {
      "paused": "⏸"
    },
    "dynamic-order": ["title", "artist"],
    "dynamic-len": 30
  },
  "wireplumber": {
    "format": "󰕾 {volume}%",
    "format-muted": "󰝟",
    "max-volume": 150,
    "scroll-step": 2,
    "on-click": "pwvucontrol",
  },
  "niri/workspaces": {
    "format": "{index}"
},
   "clock": {
    "format": "{:L%A %d %B - %Hh%M}",
    "locale": "fr_FR.UTF-8",
    "timezone": "Europe/Paris",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col"  : 3,
      "weeks-pos": "right",
        "on-scroll": 1,
        "format": {
          "months":     "<b>{}</b>",
          "days":       "{}",
          "weeks":      "<b>W{}</b>",
          "weekdays":   "<b>{}</b>",
          "today":      "<b><u>{}</u></b>"
        }
      },
      "actions":  {
        "on-scroll-up": "tz_up",
        "on-scroll-down": "tz_down",
        "on-scroll-up": "shift_up",
        "on-scroll-down": "shift_down"
      }
  },
  "custom/weather": {
		"format": "{}",
		"interval": 300,
		"exec": "~/.config/waybar/scripts/weather &",
		"tooltip": false
	},
  "group/middle": {
    "orientation": "inherit",
    "modules": [
      "clock",
      "custom/weather"
    ]
  },
  "battery": {
    "format": "{icon} {capacity}%",
    "format-icons": ["󱃍", "󱊡", "󱊢", "󱊣", "󱈏"],
    "interval": 5,
    "states": {
      "warning": 20,
      "critical": 10
    },
    "tooltip": false,
    "on-double-click": "pkill waybar && waybar"
  },
  "tray": {
    "icon-size": 16,
    "spacing": 2,
    "show-passive-items": false
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='red'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "custom/shutdown": {
    "on-click": "wlogout",
    "format": "",
  },
  "cpu#use": {
    "interval": 2,
    "states": {
        "critical": 70
    },
    "format": "  {usage}%",
  },
  "cpu#bar": {
    "interval": 2,
    "states": {
        "critical": 70
    },
    "format": "{icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7} {load}GHz",
    "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"],
  },
  "group/cpus": {
    "orientation": "inherit",
    "drawer": {
        "transition-duration": 500,
    },
    "modules": [
      "cpu#use", 
      "cpu#bar"
    ]

  },
  "memory#perc": {
    "format": "  {percentage}%",
    "interval": 2,
    "states": {
      "critical": 80
    }
  },
  "group/memorys": {
    "orientation": "inherit",
    "drawer": {
        "transition-duration": 500,
    },
    "modules": [
      "memory#perc", 
      "memory#use"
    ]

  },
  "memory#use": {
    "format": "{used:0.1f}G/{total:0.1f}G",
    "interval": 2,
    "states": {
      "critical": 80
    }
  },
  "bluetooth": {
    "format": " {status}",
    "format-disabled": "", // an empty format will hide the module
    "format-connected": " {num_connections}",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "on-click": "~/.config/waybar/scripts/rofi-bluetooth &"
  },
  "network": {
    "format-wifi": "  {signalStrength}%",
    "format-ethernet": "  {ipaddr}/{cidr}",
    "tooltip-format": " {ifname} via {gwaddr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)",
    "tooltip-format-ethernet": " {ifname}",
    "on-click": "~/.config/waybar/scripts/rofi-wifi &",
    "format-disconnected": "Disconnected  ",
  },
  "disk#home": {
    "interval": 30,
    "format": "󱛟 {path} <b>{percentage_free}%</b>",
    "tooltip-format": "{used} utilisé sur {total} dans {path} ({percentage_used}%)",
    "path": "/home/",
    "on-click": "kitty ncdu /home/",
    "on-scroll-up": "",
    "on-sroll-down": ""
  },
  "disk#root": {
    "interval": 30,
    "format": "- {path} <b>{percentage_free}%</b> ",
    "tooltip-format": "{used} utilisé sur {total} dans {path} ({percentage_used}%)",
    "path": "/",
    "on-click": "kitty ncdu /",
    "on-scroll-up": "",
    "on-sroll-down": ""
  },
  "group/disks": {
      "orientation": "inherit",
      "drawer": {
          "transition-duration": 500,
      },
      "modules": [
          "disk#home",
          "disk#root"
      ]
  },
  "custom/pkg-aur": {
    "exec": "paru -Qua | wc -l",
    "interval": 1800,
    "format": "󰏔 {}",
    "tooltip": true,
    "tooltip-format": "AUR packages",
    "on-click": "kitty paru -Syu",
  },
  "custom/pacman": {
    "format": "  {}",
    "interval": 3600, 
    "exec": "checkupdates | wc -l", 
    "on-click": "kitty sudo pacman -Syu",
    "tooltip": true,
    "tooltip-format": "Pacman packages",
  },
}